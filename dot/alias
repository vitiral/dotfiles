# pv push
function pvp() {
  M="$(pv at): $(pv desc)"
  echo "$M"
  $(cd .pvc/ \
   && git add --all \
   && git commit -am "$M" \
   && git push origin main)
}

function luahelp() {
  luap -e "require'civ'; print(require'doc'('$1'))"
}

