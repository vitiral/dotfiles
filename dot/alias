# urxvt font setter
setfont(){
    fonts="\
xft:Inconsolata\ Nerd\ Font:style=Medium:size=$1\
,ttf: Noto Mono:style=Regular:size=$1\
,ttf: Noto Emoji:style=Regular:size=$1\
,ttf: Noto Sans Symbols:style=Regular:size=$1"

    printf '\33]50;%s\007' "$fonts"
}
if [ -z ${TMUX+x} ]; then
    setfont 13
fi


