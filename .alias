##################################################
# development commands

export PYTHONSTARTUP="$HOME/.pythonrc.py"
alias py='python3'
alias pyt='/usr/local/bin/py.test-3.4'
alias pyt='/usr/local/bin/py.test-3.4'
alias pytdb='/usr/local/bin/py.test-3.4 -sx --pdb'
alias pdb='py -m ipdb'
alias dbe='py -m cloudtb.dbe'
alias pydev='py setup.py develop'

alias py2='python2'
alias py2t='/usr/local/bin/py.test-2.7'
alias py2tdb='/usr/local/bin/py.test-2.7 -sx --pdb'
alias pdb2='py2 -m ipdb'
alias dbe2='py2 -m cloudtb.dbe'
alias py2dev='py2 setup.py develop'


##################################################
# Git
alias g='git'
alias gst='git status'
alias gd='git diff'
alias gdc='git diff --cached'
alias gp='git push'
alias gpo='git push origin'
alias gc='git commit'
alias gca='git commit -va'
alias gcam='git commit -vam'
alias gc!='git commit -v --amend'
alias gco='git checkout'
alias gcm='git checkout master'
alias gcb='git checkout -b'
alias gr='git remote'
alias grls='git remote -v'
alias grmv='git remote rename'
alias grrm='git remote remove'
alias gb='git branch'
alias gbd='git branch -d'
alias gconfig='git config --list'
alias glog='git log --oneline --decorate --color --graph'
alias gss='git status -s'
alias ga='git add'
#alias gap='git add --patch'
#alias gaa='git add --all'
alias gm='git merge'

