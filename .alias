pathappend() {
    # properly append path to end of PATH
    if [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]]; then
        export PATH="${PATH:+"$PATH:"}$1"  # handles case where path is empty
    fi
}

pathinsert() {
    # properly insert path at beginning of PATH
    if [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]]; then
        export PATH="$1:$PATH"
    fi
}


